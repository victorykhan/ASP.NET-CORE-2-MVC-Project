@model ElectoApp.Models.Country

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Country</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CountryName" class="control-label"></label>
                <input id="Country" asp-for="CountryName" class="form-control" />
                <span asp-validation-for="CountryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CounContinent" class="control-label"></label>
                <select id="Continent" asp-for="CounContinent" class="form-control" asp-items="@(new SelectList(@ViewBag.ListOfContinent,"ContinentId","ContinentName"))" ></select>
                <span asp-validation-for="CounContinent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="Create" type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
      
        $("#Create").on('click', function () {
            reset();
            alertify.success("Success log message");
            return false;
        });
    </script>
}
