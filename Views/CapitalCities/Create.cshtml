@model ElectoApp.Models.CapitalCity

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Capital City</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CapCountry" class="control-label"></label>
                <select asp-for="CapCountry" class="form-control" asp-items="@(new SelectList(@ViewBag.ListOfCountry,"CountryId","CountryName"))"></select>
                <span asp-validation-for="CapCountry" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CapitalCityName" class="control-label"></label>
                <input asp-for="CapitalCityName" class="form-control" />
                <span asp-validation-for="CapitalCityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
